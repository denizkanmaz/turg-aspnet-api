@using Turg.App.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product List";
}

@section Head 
{
    <style>
        .table-products {
            margin: 0 auto;
            max-width: 600px;
        }
    </style>
}

<table class="table-products">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@product.Price @product.Currency</td>
            </tr>
        }
    </tbody>
</table>
